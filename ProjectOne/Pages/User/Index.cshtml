@page
@model ProjectStore.Pages.User.UserModel
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center">Информация о пользователях</h1>

<div class="bd-example rounded-4">
    <table class="table table-striped table-hover table-bordered shadow rounded-4">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Неудачные попытки входа</th>
            <th scope="col">Email</th>
            <th scope="col">Штамп безопасности</th>
            <th scope="col">Действие</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var user in Model.Users)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td> @user.AccessFailedCount.ToString()</td>
                <td>@user.Email</td>
                <td>@user.SecurityStamp</td>
                <td>
                    <div class="d-flex">
                        <button class="btn btn-dark me-2">
                            <i class="fas fa-edit"></i> Изменить
                        </button>
                        <button class="btn btn-primary">
                            <i class="fas fa-trash"></i> Удалить
                        </button>
                    </div>

                </td>
            </tr>
        }

        </tbody>

    </table>
</div>