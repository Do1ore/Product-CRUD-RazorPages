@page
@model ProjectStore.Pages.Product.DetailsModel

@{
    ViewData["Title"] = "Детали";
}

<h1 class="mb-4 text-center">Детали для администратора</h1>

<div>
    <h4>Товар</h4>
    <hr />
    <dl class="row mb-4">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Imagepath)
        </dt>
        <dd class="col-sm-10">
           
            @Html.DisplayFor(model => model.Product.Imagepath)
        </dd>
         <img src="@Model.Product.Imagepath" class="card-img shadow-lg rounded-3" style="height: 400px; width: 400px; object-fit: cover"/>
    </dl>
</div>
<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Product?.Id" class="btn btn-info">Изменить</a>
    <a asp-page="./Index" class="btn btn-secondary">К списку товаров</a>
</div>